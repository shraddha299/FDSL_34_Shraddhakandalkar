#include <stdio.h>

int main()  
{  
    int n;  
    printf("\nEnter size of array:");  
    scanf("%d", &n);  

    int a[n], i, j, temp;  

    printf("\nEnter %d array elements:", n);  
    for (i = 0; i < n; i++)  
    {  
        scanf("%d", &a[i]);  
    }  

    // Selection Sort Algorithm  
    for (i = 0; i < n - 1; i++)  
    {  
        for (j = i + 1; j < n; j++)  
        {  
            if (a[j] < a[i])  
            {  
             
             temp = a[i];  
             a[i] = a[j];  
             a[j] = temp;  
             
            }
        }
    }

    printf("\nThe sorted array is:\n");  
    for (i = 0; i < n; i++)  
    {  
        printf("%d\t", a[i]);  
    }  

    return 0;  
}
