//program for sorting array using bubble sort
#include<stdio.h>
int main()
{ 
  int n=10,a[n],i,j,temp;
  printf("enter size of array:");
  scanf("%d",&n);
  
  printf("\nenter %d array elements:",n);
  for(i=0;i<n;i++)
  {
      scanf("%d",&a[i]);
  }
  
  for(i=0;i<n-1;i++)
  {
    for(j=0;j<n-1-i;j++)
    { 
      if(a[j]>a[j+1])
      {
        temp=a[j];
        a[j]=a[j+1];
        a[j+1]=temp;
      }
    }
  }  
   printf("\nSorted array elements are:");
   for(i=0;i<n;i++)
   {
      printf("%d\t",a[i]);
   }
  return 0;
}
